{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "ES2015",
		"esModuleInterop": true,
		"strict": true,
		"removeComments": true,
		"pretty": false,
		// Import non-ES modules as default imports.
		"outDir": "lib",
		"rootDir": "src"
	},
	"include": [
		"./src/**/*"
	]
}

{
	"name": "squashify",
	"version": "1.0.1",
	"description": "A Node.js command-line tool and script to compress and optimize images, using different algorithms to reduce file size",
	"license": "GPL-2.0-or-later",
	"contributors": [
		"Erik Golinelli <erik@codekraft.it> (https://codekraft.it/)",
		"John Hooks <bitmachina@outlook.com> (https://johnhooks.io/)"
	],
	"homepage": "https://github.com/wp-blocks/squashify/#readme",
	"bugs": {
		"url": "https://github.com/wp-blocks/squashify/issues"
	},
	"scripts": {
		"build": "tsc --build --clean && tsc",
		"postbuild": "npx esbuild src/index.ts --outfile=lib/cjs/index.js --bundle --platform=node --minify",
		"watch": "tsc --watch --sourceMap",
		"squashify": "node ./lib/esm/index.js --in tests/images/ --out tests/output --verbose",
		"test": "jest --silent=false --coverage --verbose",
		"posttest": "rimraf tests/images/dist-*"
	},
	"files": [
		"lib",
		"tests",
		"package.json",
		".gitignore",
		"LICENSE",
		"readme.md"
	],
	"keywords": [
		"image",
		"compression",
		"optimization",
		"performance",
		"CLI",
		"tool",
		"avif",
		"webp",
		"svg",
		"development",
		"frontend",
		"SEO"
	],
	"main": "./lib/esm/index.js",
	"bin": "./lib/esm/index.js",
	"types": "./lib/esm/index.d.ts",
	"engines": {
		"node": ">=16.0.0"
	},
	"exports": {
		"import": "./lib/esm/index.js",
		"require": "./lib/cjs/index.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/wp-blocks/squashify.git"
	},
	"dependencies": {
		"glob": "^10.3.12",
		"ini": "^4.1.2",
		"prompts": "^2.4.2",
		"sharp": "0.33.3",
		"svgo": "^3.2.0",
		"yargs": "^17.7.2"
	},
	"devDependencies": {
		"@babel/core": "^7.24.3",
		"@babel/preset-env": "^7.24.3",
		"@babel/preset-typescript": "^7.24.1",
		"@jest/globals": "^29.7.0",
		"@types/ini": "^4.1.0",
		"@types/jest": "^29.5.12",
		"@types/node": "^20.11.30",
		"@types/prompts": "^2.4.9",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"eslint": "^8.57.0",
		"eslint-config-standard-with-typescript": "^43.0.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-n": "^16.6.2",
		"eslint-plugin-promise": "^6.1.1",
		"jest": "^29.3.1",
		"prettier": "^3.2.5",
		"typescript": "^5.4.3"
	}
}
